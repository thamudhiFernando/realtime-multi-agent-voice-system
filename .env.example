# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo-preview

# Database Configuration
# SQLite (default - no setup required):
DATABASE_URL=sqlite:///./data/electromart.db
# PostgreSQL (if you have it installed):
# DATABASE_URL=postgresql://postgres:password@localhost:5432/electromart

# Redis (optional - for session persistence)
REDIS_URL=redis://localhost:6379/0

# LangSmith Configuration (Optional - for tracing)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=ls__your-langsmith-api-key-here
LANGCHAIN_PROJECT=electromart-agents
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Server Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development

# Vector Store
CHROMA_PERSIST_DIRECTORY=./data/chroma
